# Environment Configuration for Real AWS Services
# Copy this to .env.local and fill in your AWS credentials

# Environment Settings
ENVIRONMENT=dev
PROJECT_NAME=easy-video-share
USE_LOCALSTACK=false
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
# Optional: If not using AWS CLI profiles, set these:
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# Resource Names (from your Terraform outputs)
S3_BUCKET=easy-video-share-silmari-dev
AI_PROJECTS_TABLE=easy-video-share-ai-projects-dev
VIDEO_ASSETS_TABLE=easy-video-share-video-assets-dev
EVENT_BUS_NAME=easy-video-share-ai-video-bus-dev
SECRETS_NAME=easy-video-share-ai-api-keys-dev

# API Keys (will be loaded from Secrets Manager in production)
# For local testing, you can set these directly:
OPENAI_API_KEY=your_openai_api_key_here
FAL_API_KEY=your_fal_api_key_here

# Service Endpoints (leave empty for real AWS)
# Only set these for LocalStack testing
LOCALSTACK_ENDPOINT=

# Bedrock Configuration
BEDROCK_REGION=us-east-1
NOVA_REEL_MODEL_ID=amazon.nova-reel-v1:0
NOVA_CANVAS_MODEL_ID=amazon.nova-canvas-v1:0

# FastAPI Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true 
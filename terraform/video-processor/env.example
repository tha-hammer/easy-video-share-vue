# Local Development Environment Variables
# Copy this file to .env and update with your values

# Application settings
ENVIRONMENT=dev
PROJECT_NAME=easy-video-share
LOG_LEVEL=DEBUG

# AWS Configuration (for local testing with LocalStack or real AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Table Names (local)
AI_PROJECTS_TABLE=easy-video-share-ai-projects-dev
VIDEO_ASSETS_TABLE=easy-video-share-video-assets-dev

# EventBridge Bus Name (local)
EVENT_BUS_NAME=easy-video-share-ai-video-bus-dev

# Secrets Manager Secret Name (local)
SECRETS_NAME=easy-video-share-ai-api-keys-dev

# API Keys (for local development)
KLING_API_KEY=your_kling_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Local service URLs (when using LocalStack)
LOCALSTACK_ENDPOINT=http://localhost:4566
DYNAMODB_ENDPOINT=http://localhost:4566
S3_ENDPOINT=http://localhost:4566
EVENTS_ENDPOINT=http://localhost:4566
SECRETS_ENDPOINT=http://localhost:4566

# Use LocalStack for local development
USE_LOCALSTACK=true 